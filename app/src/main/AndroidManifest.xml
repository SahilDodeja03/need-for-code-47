<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.studentprogressreport">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudentProgressReport"
        tools:targetApi="31">
        <activity
            android:name=".TeacherMarks"
            android:exported="false" />
        <activity
            android:name=".StudentResult"
            android:exported="false" />
        <activity
            android:name=".SubjectAllocations"
            android:exported="true"
            android:parentActivityName=".AdminPage" />
        <activity
            android:name=".StudentDetails"
            android:exported="true"
            android:parentActivityName=".AdminPage" />
        <activity
            android:name=".TeacherDetails"
            android:exported="true"
            android:parentActivityName=".AdminPage" />
        <activity
            android:name=".AdminPage"
            android:exported="true"
            android:parentActivityName=".StudentLogin" />
        <activity
            android:name=".TeacherPage"
            android:exported="true"
            android:parentActivityName="" />
        <activity
            android:name=".StudentLogin"
            android:exported="true"
            android:parentActivityName=".LoginPage" />
        <activity
            android:name=".LoginPage"
            android:exported="true"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>